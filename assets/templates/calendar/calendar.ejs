<div class="text-center">
	<div class="btn-group">
		<button class="btn btn-default" data-calendar-view="year">Année</button>
		<button class="btn btn-default active" data-calendar-view="month">Mois</button>
		<button class="btn btn-default" data-calendar-view="week">Semaine</button>
		<button class="btn btn-default" data-calendar-view="day">Jour</button>
	</div>
	<div class="btn-group">
		<button class="btn btn-default" data-calendar-nav="today">Aujourd'hui</button>
	</div>
</div>
<br/>
<div class="btn-group pull-left">
	<button class="btn btn-default" data-calendar-nav="prev"><i class="fa fa-chevron-left"></i>&nbsp; Précédent</button>
</div>
<div class="btn-group pull-right">
	<button class="btn btn-default" data-calendar-nav="next">Suivant &nbsp;<i class="fa fa-chevron-right"></i></button>
</div>

<div id="calendar"></div>


<ul class="text-center list-inline list-unstyled cal-event-list">
	<li>
		<span class="pull-left event event-success"></span>&nbsp; Travail terminé
	</li>
	<li>
		<span class="pull-left event event-important"></span>&nbsp; Pas de rendez-vous
	</li>
	<li>
		<span class="pull-left event event-info"></span>&nbsp; Installation
	</li>
	<li>
		<span class="pull-left event event-special"></span>&nbsp; Maintenance
	</li>
	<li>
		<span class="pull-left event event-warning"></span>&nbsp; Dépannage
	</li>
</ul>


<style type="text/css">
	#calendar{
		margin-top: -20px
	}
</style>
<link rel="stylesheet" type="text/css" href="/js/calendar/css/calendar.css">
<script type="text/javascript" src="/js/calendar/js/languages/fr-FR.js"></script>
<script type="text/javascript" src="/js/calendar/js/calendar.js"></script>

<script type="text/javascript">

	

	window.calendar = $("#calendar").calendar({
		language: 'fr-FR',
		tmpl_path: "/templates/calendar/tmpls/",
		events_source: "/work/finder"+"<%= typeof(worker) != typeof(undefined) ? ('?worker='+worker) : '' %>"
	});

	$('.btn-group button[data-calendar-nav]').each(function() {
		var $this = $(this);
		$this.click(function() {
			calendar.navigate($this.data('calendar-nav'));
		});
	});

	$('.btn-group button[data-calendar-view]').each(function() {
		var $this = $(this);
		$this.click(function() {
			calendar.view($this.data('calendar-view'));
			$this
			.parent()
			.find(".active")
			.removeClass("active")
			.end()
			.end()
			.addClass("active");
		})
		
	});
</script>



