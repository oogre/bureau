<fieldset id="<%= id %>">
	<fieldset class="row">
		<div class="form-group col-sm-offset-2 col-sm-4">
			<div class="input-group col-sm-12">
				<label class="input-group-addon" for="name_<%= id %>" >Nom</label>
				<input class="form-control" type="text" id="name_<%= id %>" name="task_name" value="" required>
			</div>
		</div>
		<div class="form-group col-sm-4">
			<div class="input-group col-sm-12">
				<div class="checkbox">
					<label>
						<input type="checkbox" name="typeLinked" > Lier au type d'élément
					</label>
				</div>
			</div>
		</div>
		<div class="form-group col-sm-1">
			<div class="input-group col-sm-12">
				<button class="btn btn-danger task-remove" >Supprimer</button>
			</div>
		</div>
	</fieldset>
</fieldset>

<script type="text/javascript">
	$("#<%= id %> .task-remove")
	.on("click", function(){
		if(prompt("Ecris SUPPRIMER pour confirmer") == "SUPPRIMER"){
			$("#<%= id %>").remove();
		}
		return false;
	});

</script>